<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.sz.notouchpass.rivalry.fragments.PredictionFragment">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_win"
            android:layout_width="match_parent"
            android:layout_height="160pt"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="17pt"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_draw"
            android:layout_width="match_parent"
            android:layout_height="160pt"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="17pt"
            android:layout_below="@+id/pie_chart_win" />

    </RelativeLayout>
</ScrollView>
