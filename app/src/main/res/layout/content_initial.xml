<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/initial"
    android:padding="@dimen/huge_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sz.notouchpass.initial.InitialActivity"
    tools:showIn="@layout/activity_initial">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/mid_margin"
            android:text="Put home and away teams to continue"
            android:textAlignment="center"
            android:textColor="@color/colorYellow" />

        <EditText
            android:id="@+id/inputTeam1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:padding="@dimen/mid_margin"
            android:background="@drawable/underline_white"
            android:hint="@string/input_team1"
            android:inputType="text"
            android:textColor="@color/colorLightest"
            android:text="Real Madrid"
            android:textAlignment="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <EditText
            android:id="@+id/inputTeam2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/huge_margin"
            android:background="@android:color/transparent"
            android:hint="@string/input_team2"
            android:inputType="text"
            android:padding="@dimen/mid_margin"
            android:text="Barcelona"
            android:textAlignment="center"
            android:textColor="@color/colorLightest"
            app:layout_constraintBottom_toTopOf="@+id/btnGetPrediction"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGetPrediction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/huge_margin"
            android:layout_marginEnd="@dimen/huge_margin"
            android:background="@drawable/button_rounded_yellow"
            android:elevation="4dp"
            android:text="@string/buttons_search"
            android:textAlignment="center"
            android:textColor="@color/colorYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputTeam2" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorYellow"
            android:indeterminateTintMode="src_atop"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputTeam2" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
